    = link_to "New", new_headline_path, :class => "new"

.section.home.fortunes
  = link_to "Fortunes", fortunes_path, :class => active_on("title", :fortunes => true)
  - if can? :create, Fortune
    = link_to "New", new_fortune_path, :class => "new"

- if current_user and can? :index, User
  .section.home.users
    = link_to "Users", users_path, :class => active_on("title", :users => true)

