= stylesheet_link_tag "headlines"

.resource_links
  = link_to "Cancel", @headline, :id => "cancel_editing"
= nested_form_for @headline, :html => { :multipart => true } do |f|
  = f.error_messages
  .fields
    = f.label :headline
    = f.text_field :headline
  .fields
    - if @headline.image?
      = label_tag "Current image"
      .image= image_tag @headline.image_url
    - else
      = label_tag "No image has been uploaded"
  .fields
    = f.label :image
    = f.file_field :image
    = f.hidden_field :image_cache
  .fields
    = f.label :published, "Published?"
    = f.check_box :published
  .fields
    = f.submit
